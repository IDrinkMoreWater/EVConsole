<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <ImageView
	       android:id="@+id/imgcpxq"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:src="@drawable/cpxqland" />
    <ImageView  
	        android:id="@+id/ivbusgoodselProduct"  
	        android:layout_width="430dp"   
	        android:layout_height="390dp"   
	        android:layout_below="@+id/imgcpxq" 
	        android:layout_alignParentLeft="true"
	     />	
	<TextView
            android:id="@+id/txtbusgoodselName"
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/imgcpxq" 
	        android:layout_toRightOf="@+id/ivbusgoodselProduct"
	        android:layout_marginLeft="20dp"
	        android:textSize="40sp"
            android:textStyle="bold"
	        />
	<TextView
            android:id="@+id/txtbusgoodselAmounttxt"
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/txtbusgoodselName"
	        android:layout_toRightOf="@+id/ivbusgoodselProduct"
	        android:layout_marginLeft="20dp"
	        android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#FF6633" 
	        android:text="零售价:"
	        />		    
	<TextView
            android:id="@+id/txtbusgoodselAmount"
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/txtbusgoodselName"
	        android:layout_toRightOf="@+id/txtbusgoodselAmounttxt"	       
	        android:textSize="40sp"
            android:textStyle="bold"
	        android:numeric="decimal"
	        android:textColor="#FF6633" 
	        android:text="0" />
	
   	<ImageView 
   	    android:id = "@+id/ivbuszhiselzhier"
   	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/txtbusgoodselAmounttxt"
		android:layout_toRightOf="@+id/ivbusgoodselProduct"
		android:layout_marginLeft="20dp"
		android:src="@drawable/zhier"			
   	/> 
   	<ImageView 
   	    android:id = "@+id/ivbuszhiselweixing"
   	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"	
		android:layout_below="@+id/txtbusgoodselAmounttxt"
		android:layout_toRightOf="@+id/ivbuszhiselzhier"		
		android:layout_marginLeft="20dp"
		android:src="@drawable/weixing"		
   	/> 	
   	<ImageView 
   	    android:id = "@+id/ivbuszhiselamount"
   	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"	
		android:layout_below="@+id/txtbusgoodselAmounttxt"
		android:layout_toRightOf="@+id/ivbuszhiselweixing"
		android:layout_marginLeft="20dp"
		android:src="@drawable/amount"		
   	/> 
   	<ImageView 
   	    android:id = "@+id/ivbuszhiseltihuo"
   	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"	
		android:layout_below="@+id/txtbusgoodselAmounttxt"
		android:layout_toRightOf="@+id/ivbuszhiselamount"
		android:layout_marginLeft="20dp"	
		android:src="@drawable/tihuopwd"			
   	/> 	
	<ImageView
	       android:id="@+id/imgback"
	       android:layout_alignParentBottom="true"
	       android:layout_alignParentLeft="true"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:src="@drawable/imgbackland" />	
	<ImageView
	       android:id="@+id/imgnext"
	       android:layout_alignParentBottom="true"
	       android:layout_toRightOf="@+id/imgback"  
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:src="@drawable/imgnextland" />       	         
    <ImageView
	       android:id="@+id/imgbtnbusgoodsback"
	       android:layout_alignParentBottom="true"
	       android:layout_toRightOf="@+id/imgnext" 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:src="@drawable/busfinishland" />

</RelativeLayout>
