<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <ImageView
	       android:id="@+id/imgjsqd"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:src="@drawable/jsqd" />
    <ImageView
	       android:id="@+id/imgwhite"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_below="@+id/imgjsqd"
	       android:src="@drawable/imgwhite" />
    <TextView
        android:id="@+id/txtbuszhiercount"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgjsqd"
        android:textSize="40sp"
        android:textStyle="bold"
        android:numeric="integer"
        android:textColor="#FF0000" 
        android:text="0" />
	<TextView
        android:id="@+id/txtbuszhiersp"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgjsqd"
        android:layout_toRightOf="@+id/txtbuszhiercount"
        android:textSize="40sp"
        android:textStyle="bold"
        android:text="件商品 总计:"
        />
	<TextView
        android:id="@+id/txtbuszhiamerount"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txtbuszhiersp"
        android:layout_below="@+id/imgjsqd"
        android:textSize="40sp"
        android:textStyle="bold"
        android:numeric="decimal"
        android:textColor="#FF0000" 
        android:text="0" />
	<TextView
        android:id="@+id/txtbuszhierrst"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtbuszhiamerount"
        android:textSize="40sp"
        android:textStyle="bold"        
        android:textColor="#FF0000" 
        android:text="交易结果:" />
	<TextView
        android:id="@+id/txtbuszhiertime"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtbuszhierrst"
        android:textSize="40sp"
        android:textStyle="bold"        
        android:textColor="#FF0000" 
        android:text="时间:" />		
	<ImageButton
        android:id="@+id/imgbtnbuszhierqxzf"
        android:layout_below="@+id/txtbuszhiertime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/qxzffang" />
	<ImageView
       android:id="@+id/imgzflc"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/imgbtnbuszhierqxzf"
       android:src="@drawable/zflc" />
	<ImageView
       android:id="@+id/imgxqwhite"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/imgzflc" 
       android:src="@drawable/imgwhite" />
	<ImageView 
   	    android:id = "@+id/ivbuszhierbeijing"
   	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/imgzflc"	
		android:layout_above="@+id/imgback"
		android:src="@drawable/zhierfang"			
   	/>
	<ImageView
	    android:id="@+id/ivbuszhier"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgzflc"	
        android:layout_marginTop="127dp"
        android:layout_marginLeft="430dp"
        android:src="@drawable/zhierwait"
        />
	<ImageView
	       android:id="@+id/imgback"
	       android:layout_alignParentBottom="true"
	       android:layout_alignParentLeft="true"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:src="@drawable/zhifuback" />	
	<ImageView
	       android:id="@+id/imgnext"
	       android:layout_alignParentBottom="true"
	       android:layout_toRightOf="@+id/imgback"  
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:src="@drawable/zhifunext" />        	         
    <ImageView
       android:id="@+id/imgbtnbusgoodsback"
       android:layout_alignParentBottom="true"
       android:layout_toRightOf="@+id/imgnext" 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/busfinish" />
</RelativeLayout>
