				            	<TextView 	
				            	    android:minWidth="160px"	    
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:text="商品排序"/>
						        
						         <Spinner
						            android:id="@+id/spinparamsort"
						            android:layout_width="wrap_content" 
							        android:layout_height="wrap_content"
							        android:text="" />    
