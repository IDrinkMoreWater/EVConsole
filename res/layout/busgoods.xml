<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <GridView 
		    android:id="@+id/gvbusgoodsProduct"
		    android:layout_width="wrap_content"
		    android:layout_height="390dp"
		    android:columnWidth="90dp"
		    android:gravity="center"
		    android:horizontalSpacing="10dp"
		    android:numColumns="auto_fit"
		    android:stretchMode="spacingWidthUniform"
		    android:verticalSpacing="10dp" />
	<RelativeLayout 
	         android:layout_width="wrap_content"
		     android:layout_height="wrap_content"						       
		     >	
	         <TextView 		 
           	    android:id="@+id/txtbusgoodspay" 
           	    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#FF0000"
	        	android:textSize="55dp"
				android:text="投币金额:"/>
	        <TextView 		 
           	    android:minWidth="160px"  
           	    android:id="@+id/txtbusgoodspaymoney" 
           	    android:layout_toRightOf="@+id/txtbusgoodspay"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#FF0000"
	        	android:textSize="55dp"
				android:text="0.0"/>
	         <ImageButton
		        android:id="@+id/imgbtnbusgoodsback"
		        android:layout_alignParentRight="true"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/busfinish" />  	        
	</RelativeLayout>
</LinearLayout>
